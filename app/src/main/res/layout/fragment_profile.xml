<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.fragments.Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:background="@drawable/circle_image_ring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/ic_outline_settings"
            android:tint="@color/white"
            android:tooltipText="@string/settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:targetApi="o" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_outline_notifications"
            android:tint="@color/white"
            android:tooltipText="@string/notifications_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/name_user"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/profile"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintTop_toBottomOf="@+id/profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/email_profile"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_outline_swap_vert"
            android:tint="@color/white"
            android:tooltipText="@string/notifications_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="o" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/account_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_outline_account" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/appearance_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_outline_bubble" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/notifications_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_outline_notifications" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/productivity_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_chart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/support_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_help_outline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/about_us_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_outline_info" />

            <TextView
                android:id="@+id/LogOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_profile"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:clickable="true"
                android:drawablePadding="@dimen/dimen_32"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/log_out_profile"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:drawableEndCompat="@drawable/ic_chevron_round_bg"
                app:drawableStartCompat="@drawable/ic_exit" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>