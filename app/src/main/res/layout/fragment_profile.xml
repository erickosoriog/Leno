<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/profile"
    android:background="@color/white_smoke"
    tools:context=".Fragments.Profile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/user"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:elevation="6dp"
            android:outlineAmbientShadowColor="@color/white"
            android:padding="2dp"
            android:src="@mipmap/male_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Erick Osorio"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/user"
            app:layout_constraintStart_toStartOf="@id/user"
            app:layout_constraintTop_toBottomOf="@+id/user" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Example@gmail.com"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/ic_outline_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:src="@drawable/ic_outline_notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Account"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_outline_account"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Account"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/Appearance"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_outline_bubble"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Appearance"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/Account"
        app:layout_constraintStart_toStartOf="@id/Account"
        app:layout_constraintTop_toBottomOf="@+id/Account" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_outline_notifications"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/Appearance"
        app:layout_constraintStart_toStartOf="@id/Appearance"
        app:layout_constraintTop_toBottomOf="@+id/Appearance" />

    <TextView
        android:id="@+id/Productivity"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_chart"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Productivity"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/notifications"
        app:layout_constraintStart_toStartOf="@id/notifications"
        app:layout_constraintTop_toBottomOf="@+id/notifications" />

    <TextView
        android:id="@+id/Support"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_help_outline"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Support"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/Productivity"
        app:layout_constraintStart_toStartOf="@id/Productivity"
        app:layout_constraintTop_toBottomOf="@+id/Productivity" />

    <TextView
        android:id="@+id/AboutUs"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_outline_info"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="About us"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/Support"
        app:layout_constraintStart_toStartOf="@id/Support"
        app:layout_constraintTop_toBottomOf="@+id/Support" />

    <TextView
        android:id="@+id/LogOut"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_exit"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Log out"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/AboutUs"
        app:layout_constraintStart_toStartOf="@id/AboutUs"
        app:layout_constraintTop_toBottomOf="@+id/AboutUs" />


</androidx.constraintlayout.widget.ConstraintLayout>