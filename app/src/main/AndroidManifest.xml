<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.leno">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_leno"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_leno_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.note.Note" />
        <activity android:name=".presentation.auth.forgotPassword.ForgotPassword" />
        <activity android:name=".presentation.auth.register.Register" />
        <activity android:name="app.leno.presentation.auth.login.Login" />
        <activity android:name=".presentation.welcome.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.main.MainActivity"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="adjustNothing" />
    </application>

</manifest>